{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/v4/schemas/v4/furion-schema.json",

  "JWTSettings": {
    "ExpiredTime": 3600,//jwt accessToken过期时间，单位（秒） 默认为1小时
    "RefreshExpiredTime":604800, //604800,//jwt refreshToken过期时间，单位（秒）默认为一周7天
    "ValidateIssuerSigningKey": true, // 是否验证密钥，bool 类型，默认true
    "IssuerSigningKey": "3c1cbc3f546eda35168c3aa3cb91780fbe703f0996c6d123ea96dc85c70bbc0a", // 密钥，string 类型，必须是复杂密钥，长度大于16
    "ValidateIssuer": true, // 是否验证签发方，bool 类型，默认true
    "ValidIssuer": "Unify", // 签发方，string 类型
    "ValidateAudience": true, // 是否验证签收方，bool 类型，默认true
    "ValidAudience": "Unify", // 签收方，string 类型
    "ValidateLifetime": true, // 是否验证过期时间，bool 类型，默认true，建议true
    "ClockSkew": 0, // 过期时间容错值，long 类型，单位秒，默认5秒
    "Algorithm": "HS256" // 加密算法，string 类型，默认 HS256
  }
}